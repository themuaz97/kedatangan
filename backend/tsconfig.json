{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
		"esm": true
	},
  "include": ["src/**/*", "src/types", "firebase.ts"],
  "exclude": ["node_modules"]
}